{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "APP_TITLE",
        "APP_USER_AGENT",
        "RB_API_BASE_URL",
        "NUM_OF_RADIOS_PER_PAGE",
        "NUM_OF_COUNTRIES_PER_PAGE",
        "NUM_OF_GENRES_PER_PAGE"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^build"]
    }
  }
}
